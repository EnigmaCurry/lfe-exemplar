{lfe_first_files, ["src/xmplr-util.lfe",
                   "src/xmplr.lfe",
                   "src/exemplar.lfe",
                   "src/exemplar-xml.lfe",
                   "src/exemplar-html.lfe"]}.

{deps, [
   {lutil, {git, "git://github.com/lfex/lutil.git", {tag, "0.9.0"}}}
  ]}.

{plugins, [
   {'lfe-compile', {git, "https://github.com/lfe-rebar3/compile.git", {tag, "0.5.0"}}}
  ]}.

{provider_hooks, [
   {pre, [{compile, {lfe, compile}}]}
  ]}.

{project_plugins, [
   {lodox, {git, "https://github.com/lfe-rebar3/lodox.git", {tag, "0.15.1"}}}
  ]}.

{overrides, [
   {override, lodox, [
      {erl_opts, [{i, "_build/default/lib"}]},
      {deps, [
         {clj, {git, "git://github.com/lfex/clj.git", {tag, "0.5.0"}}},
         {levaindoc, {git, "git://github.com/quasiquoting/levaindoc.git", {tag, "0.6.1"}}},
         {jsx, "2.8.0"},
         {lfe, "1.1.1"}
        ]}
     ]}
  ]}.

{profiles, [
  {dev, [
    {deps, [{lfe, "1.1.1"}]},
    {plugins, [
      {'lfe-version', {git, "https://github.com/lfe-rebar3/version.git", {tag, "0.4.0"}}},
      {'lfe-clean', {git, "https://github.com/lfe-rebar3/clean.git", {tag, "0.3.0"}}}
      ]}
    ]},
  {test, [
    {eunit_opts, [verbose]},
    {eunit_compile_opts, [
      {src_dirs, ["test"]}
      ]},
    {deps, [
      {ltest, {git, "git://github.com/lfex/ltest.git", {tag, "0.9.0"}}}]}
    ]},
  {docs, [
    {lodox,
      [{apps,
        [{exemplar,
          [{'source-uri',
            "https://github.com/lfex/exemplar/blob/{version}/{filepath}#L{line}"},
           {'output-path', "docs/master/current/api"}]}]}
      ]}
    ]}
  ]}.
